generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum OrgType {
  SPONSOR
  SPONSEE
}

model User {
  id              String           @id @default(uuid())
  name            String
  email           String           @unique
  password        String?
  provider        String           @default("credentials")
  emailVerified   Boolean          @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  orgType         OrgType         @default(SPONSEE)
  bio             String?
  socialMediaLinks String?
  contacts        String?
  teamId          String?
  team            Team?            @relation("team-mem", fields: [teamId], references: [id])
  ownedTeams      Team[]          @relation("team-owner")
  metrics         MetricsEntry[]
  notifications   Notification[]
}

model Team {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  members     User[]   @relation("team-mem")
  owner       User     @relation("team-owner", fields: [ownerId], references: [id])
  ownerId     String
}

model MetricsEntry {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String
  value     Float
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}